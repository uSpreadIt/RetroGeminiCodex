{
  "name": "retrogemini",
  "version": "1.1.0",
  "description": "Self-hosted, real-time collaborative retrospectives and team health checks",
  "type": "module",
  "license": "Unlicense",
  "repository": {
    "type": "git",
    "url": "https://github.com/uSpreadIt/RetroGeminiCodex.git"
  },
  "keywords": [
    "retrospective",
    "agile",
    "scrum",
    "team",
    "collaboration",
    "health-check",
    "self-hosted"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "node server.js",
    "docker:build": "docker build -t team-retrospective .",
    "docker:run": "docker run -p 8080:8080 team-retrospective",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "ci": "npm run lint && npm run type-check && npm run test && npm run build",
    "prepare": "node -e \"import('husky').catch((e) => { if (e.code !== 'ERR_MODULE_NOT_FOUND' && e.code !== 'MODULE_NOT_FOUND') throw e; })\""
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ],
    "*.{js,jsx}": [
      "eslint --fix"
    ]
  },
  "overrides": {
    "fast-xml-parser": "^5.3.4",
    "qs": ">=6.14.1",
    "tar": ">=7.5.3"
  },
  "dependencies": {
    "@socket.io/postgres-adapter": "^0.5.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "better-sqlite3": "^12.5.0",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "nodemailer": "^7.0.12",
    "pg": "^8.13.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "redis": "^5.11.0",
    "socket.io": "^4.8.2",
    "socket.io-client": "^4.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/better-sqlite3": "^7.6.12",
    "@types/express": "^5.0.0",
    "@types/node": "^22.14.0",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.10",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.0.5",
    "@vitest/ui": "^3.0.5",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vitest": "^3.0.5"
  }
}
